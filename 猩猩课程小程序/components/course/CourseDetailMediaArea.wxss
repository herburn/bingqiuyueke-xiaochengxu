.course-media-container {
    position: relative;
    width: 100%;
    height: inherit;
    background-color: #242424;
}

.poster-container {
    position: relative;
    width: 100%;
    height: inherit;
}

.poster-container .poster-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.gallery-container {
    height: inherit;
}

.video-container {
    height: inherit;
}

.poster-num {
    position: absolute;
    right: 24rpx;
    bottom: 21rpx;
    z-index: 2;
    display: flex;
    -webkit-box-align: center;
    align-items: center;
}

.poster-num__text {
    font-size: 22rpx;
    color: #fff;
    opacity: .4;
}

.poster-num__icon {
    width: 28rpx;
    height: 21rpx;
    margin-left: 8rpx;
}