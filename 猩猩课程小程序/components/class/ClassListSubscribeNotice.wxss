.notice {
    display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    flex-direction: row;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: center;
    justify-content: center;
    -webkit-box-flex: 1;
    flex-grow: 1;
}

.notice .msg {
    display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    flex-direction: row;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: center;
    justify-content: center;
    font-size: 26rpx;
    color: #f2f2f7;
    position: relative;
    height: 72rpx;
    border-radius: 8rpx;
    padding: 0 24rpx;
    background-color: #333;
}

.notice .msg::after {
    position: absolute;
    top: 18rpx;
    right: 18rpx;
    width: 12rpx;
    height: 12rpx;
    border-radius: 100%;
    background-color: #fb6666;
    content: '';
}