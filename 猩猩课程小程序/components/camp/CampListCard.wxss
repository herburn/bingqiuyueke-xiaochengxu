@import "../../__wuBaseWxss__/2.wxss";

.camp-card {
    position: relative;
    display: flex;
    overflow: hidden;
    -webkit-box-flex: 1;
    flex: 1;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    width: 339rpx;
    margin-top: 24rpx;
    border-radius: 8rpx;
    background-color: #333;
}

.camp-card .camp-thumbnail {
    width: 100%;
    height: 210rpx;
}

.camp-card .camp-name {
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: justify;
    justify-content: space-between;
    font-size: 28rpx;
    color: #f2f2f7;
    padding: 8rpx;
}

.camp-card .camp-name__inner {
    width: 295rpx;
    text-align: center;
}

.camp-card .camp-name .campCount {
    margin-top: 8rpx;
    font-size: 22rpx;
}

.camp-card .camp-name .zero-count {
    margin-top: 8rpx;
    color: #767678;
    font-size: 22rpx;
}

.camp-card .camp-mask {
    display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    flex-direction: row;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: center;
    justify-content: center;
    position: absolute;
    top: 0;
    right: 24rpx;
    z-index: 2;
    width: 40rpx;
    height: 50rpx;
}

.camp-card .camp-mask .camp-num-flag {
    position: absolute;
    top: 0;
    right: 0;
    width: 40rpx;
    height: 50rpx;
}

.camp-card .camp-mask .camp-schedule-num {
    position: relative;
    z-index: 1;
    font-size: 22rpx;
    color: #333;
    line-height: 31rpx;
}