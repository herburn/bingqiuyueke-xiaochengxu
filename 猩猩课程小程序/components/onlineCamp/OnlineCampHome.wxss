@import "../../__wuBaseWxss__/0.wxss";

.banner {
    display: block;
    width: 100%;
    height: 428rpx;
}

.tabs-outer {
    position: relative;
    z-index: 1;
    height: 151rpx;
    margin: 0 auto;
    margin-top: -54rpx;
}

.tabs-outer.tabs-outer-strick {
    position: fixed;
    z-index: 3;
    top: 0;
    left: 0;
    margin-top: 0;
    width: 100%;
    border-radius: 0;
    box-shadow: 0 4rpx 24rpx rgba(0,0,0,0.32);
}

.tabs-outer .tabs-wrapper {
    display: flex;
    -webkit-box-pack: center;
    justify-content: center;
    width: 702rpx;
    height: 151rpx;
    margin: 0 auto;
    border-radius: 16rpx;
    background: #333;
}

.tabs-outer .tabs-wrapper.tabs-wrapper-strick {
    width: 100%;
    border-radius: 0;
    transform-origin: center;
    transition: .3s width cubic-bezier(.46,1,.23,1.52);
}

.tabs-outer .tabs-wrapper .tabs {
    position: absolute;
    display: flex;
    -webkit-box-pack: justify;
    justify-content: space-between;
    box-sizing: border-box;
    width: 702rpx;
    height: 151rpx;
    padding: 16rpx 53rpx;
    font-size: 28rpx;
    color: #f2f2f7;
}

.tabs-outer .tabs-wrapper .tabs .tab-item {
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    -webkit-box-align: center;
    align-items: center;
}

.tabs-outer .tabs-wrapper .tabs .tab-item .icon {
    width: 80rpx;
    height: 80rpx;
    color: #f2f2f7;
}

.tabs-outer .tabs-wrapper .tabs .tab-item .text {
    line-height: 39rpx;
}

.main {
    position: relative;
    color: #f2f2f7;
}

.main .content {
    padding: 32rpx 24rpx 0 24rpx;
}

.main .content .title {
    display: flex;
    -webkit-box-pack: justify;
    justify-content: space-between;
    -webkit-box-align: center;
    align-items: center;
    color: #f2f2f7;
}

.main .content .title .title-text {
    font-size: 32rpx;
    color: #fcc800;
}

.main .content .title .title-action {
    display: flex;
    -webkit-box-pack: end;
    justify-content: flex-end;
    -webkit-box-align: center;
    align-items: center;
    font-size: 28rpx;
    line-height: 39rpx;
}

.main .content .title .title-action .iconfont {
    font-size: 32rpx;
    color: #f2f2f7;
}

.main .content .class-list {
    display: flex;
    -webkit-box-pack: justify;
    justify-content: space-between;
    flex-wrap: wrap;
    margin-bottom: 24rpx;
}

.main .content .class-empty {
    width: 100%;
    padding: 64rpx 0 109rpx 0;
}

.main .content .class-empty .image {
    width: 350rpx;
    height: 350rpx;
    display: block;
    margin: 0 auto;
}

.main .content .class-empty .text-tip {
    display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    flex-direction: row;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: center;
    justify-content: center;
    margin-top: 8rpx;
    font-size: 32rpx;
}

.main .content .camp-list {
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
}

.main .content .camp-list .bottom-text {
    margin: 24rpx 0 48rpx 0;
}

.main .content .camp-empty {
    display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    flex-direction: row;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: center;
    justify-content: center;
    height: 168rpx;
    margin-bottom: 48rpx;
    border-radius: 16rpx;
    font-size: 28rpx;
    color: #767678;
    background: #333;
}