.bottom-text {
    display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    flex-direction: row;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: center;
    justify-content: center;
    font-size: 28rpx;
    color: #767678;
    display: none;
    width: 100%;
    height: 40rpx;
}

.bottom-text-active {
    display: flex;
}

.bottom-text-bottom::before,.bottom-text-bottom::after {
    content: '';
    width: 160rpx;
    height: 2rpx;
    background-color: #767678;
}

.bottom-text-bottom::before {
    margin-right: 16rpx;
}

.bottom-text-bottom::after {
    margin-left: 16rpx;
}