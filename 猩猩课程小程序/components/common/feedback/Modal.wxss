@import "../../../__wuBaseWxss__/0.wxss";

.mask-screen {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 800;
    background-color: rgba(0,0,0,0.64);
    display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    flex-direction: row;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: center;
    justify-content: center;
}

.mask-screen .modal-box {
    position: relative;
    border-radius: 16rpx;
    background-color: #f2f2f7;
    animation: aniModal .5s forwards;
}

.mask-screen .modal-box .close-btn {
    font-size: 40rpx;
    color: #242424;
    position: absolute;
    top: 0;
    right: 0;
    z-index: 1;
    padding: 24rpx;
}

.mask-screen .modal-box .banner {
    width: 492rpx;
    height: 313rpx;
    margin: 80rpx 24rpx 8rpx;
    background: #9c9c9c;
}

.mask-screen .modal-box .title {
    font-size: 40rpx;
    color: #333;
    padding: 24rpx 0 16rpx;
    text-align: center;
}

.mask-screen .modal-box .content {
    display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    flex-direction: row;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: center;
    justify-content: center;
    font-size: 28rpx;
    color: #333;
    margin: 0 24rpx 33rpx;
}

.mask-screen .modal-box .content--left {
    text-align: left;
}

.mask-screen .modal-box .content--center {
    text-align: center;
}

.mask-screen .modal-box .content--right {
    text-align: right;
}

.mask-screen .modal-box .btn-box {
    font-size: 32rpx;
    color: #767678;
    position: relative;
    display: flex;
    height: 113rpx;
    border-bottom-left-radius: 16rpx;
    border-bottom-right-radius: 16rpx;
}

.mask-screen .modal-box .btn-box .border-line {
    position: absolute;
    top: -2rpx;
    left: 0;
    width: 100%;
    height: 2rpx;
    background: rgba(118,118,120,0.1);
}

.mask-screen .modal-box .btn-box .btn-cancel,.mask-screen .modal-box .btn-box .btn-confirm {
    display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    flex-direction: row;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: center;
    justify-content: center;
    -webkit-box-flex: 1;
    flex: 1;
}

.mask-screen .modal-box .btn-box-normal .btn-confirm {
    color: #333;
    background-color: #fcc800;
}

.mask-screen .modal-box .btn-box-disable .btn-cancel {
    color: #999;
    background-color: #767678;
}

@-webkit-keyframes aniModal {
    0% {
        opacity: .1;
    }

    100% {
        opacity: 1;
    }
}

@keyframes aniModal {
    0% {
        opacity: .1;
    }

    100% {
        opacity: 1;
    }
}