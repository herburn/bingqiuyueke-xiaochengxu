.ticket-prompt {
    display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    flex-direction: row;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: center;
    justify-content: center;
    font-size: 26rpx;
    color: #333;
    position: fixed;
    bottom: 16rpx;
    right: 24rpx;
    left: 24rpx;
    z-index: 700;
    height: 79rpx;
    padding-left: 16rpx;
    border-radius: 8rpx;
    box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.32);
    background-color: #fcc800;
}

.ticket-prompt .container {
    display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    flex-direction: row;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: center;
    justify-content: center;
    position: relative;
    -webkit-box-pack: start;
    -webkit-justify-content: flex-start;
    justify-content: flex-start;
    width: 100%;
}

.ticket-prompt .icon-close {
    width: 32rpx;
    height: 32rpx;
    margin-right: 8rpx;
}

.ticket-prompt .btn-close {
    position: absolute;
    right: 16rpx;
    top: 50%;
    padding: 9rpx 16rpx;
    border-radius: 8rpx;
    border: 1rpx solid #242424;
    transform: translateY(-50%);
}