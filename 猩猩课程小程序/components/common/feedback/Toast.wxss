.show-toast {
    display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    flex-direction: row;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: center;
    justify-content: center;
    position: fixed;
    left: 0;
    top: 0;
    z-index: 910;
    width: 100%;
    height: 100%;
}

.toast-text-box {
    border-radius: 16rpx;
    padding: 12rpx 30rpx;
    font-size: 28rpx;
    color: #f2f2f7;
    background: rgba(0,0,0,0.7);
}

.toast-text-box.no-mask {
    position: fixed;
    top: 50%;
    left: 50%;
    z-index: 910;
    transform: translate(-50%,-50%);
}