.popover-layout-filter {
    width: 100%;
    height: 100%;
}

.popover-layout-filter__header {
    display: flex;
    -webkit-box-align: start;
    align-items: flex-start;
    height: 134rpx;
    padding: 0 0 0 24rpx;
    border-radius: 48rpx 48rpx 0 0;
    background-color: #3f3f3f;
}

.popover-layout-filter__header .tab-item {
    position: relative;
    margin: 51rpx 48rpx 0 0;
}

.popover-layout-filter__header .tab-item .label {
    font-size: 36rpx;
    color: #f2f2f7;
    font-weight: bold;
}

.popover-layout-filter__header .tab-item .badge {
    display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    flex-direction: row;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: center;
    justify-content: center;
    font-size: 22rpx;
    color: #242424;
    position: absolute;
    top: -7rpx;
    right: -14rpx;
    width: 28rpx;
    height: 28rpx;
    border-radius: 100%;
    background-color: #fcc800;
}

.popover-layout-filter__header .tab-item-active {
    position: relative;
}

.popover-layout-filter__header .tab-item-active .label {
    color: #fcc800;
}

.popover-layout-filter__header .tab-item-active::after {
    content: '';
    position: absolute;
    bottom: -6rpx;
    left: 0;
    width: 100%;
    height: 6rpx;
    border-radius: 10rpx;
    background-color: #fcc800;
}

.popover-layout-filter__header .clear-btn,.popover-layout-filter__header .confirm-btn {
    display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    flex-direction: row;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: center;
    justify-content: center;
    height: 56rpx;
    margin-top: 48rpx;
}

.popover-layout-filter__header .clear-btn {
    font-size: 28rpx;
    color: #c9c9cd;
    margin-left: auto;
}

.popover-layout-filter__header .clear-btn-hidden {
    visibility: hidden;
}

.popover-layout-filter__header .confirm-btn {
    font-size: 26rpx;
    color: #333;
    width: 120rpx;
    height: 56rpx;
    margin-left: 48rpx;
    margin-right: 30rpx;
    border-radius: 8rpx;
    background-color: #fcc800;
}

.popover-layout-filter__content {
    height: calc(100% - 134rpx);
}