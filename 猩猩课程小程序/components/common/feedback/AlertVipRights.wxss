    text-align: center;
    font-size: 28rpx;
    color: #767678;
}

.equity-pop .link-btn {
    display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    flex-direction: row;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: center;
    justify-content: center;
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 114rpx;
    border-radius: 0 0 16rpx 16rpx;
    color: #242424;
    background: #fcc800;
}