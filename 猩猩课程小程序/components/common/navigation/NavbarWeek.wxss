.week-navbar {
    position: relative;
    box-sizing: border-box;
    display: flex;
    -webkit-box-pack: justify;
    justify-content: space-between;
    width: 100vw;
    height: 143rpx;
    padding: 0 0 40rpx;
    background-color: #242424;
    box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.32);
}

.week-navbar::before {
    content: '';
    position: absolute;
    top: -20rpx;
    left: 0;
    width: 100%;
    height: 20rpx;
    background-color: #242424;
}

.week-navbar .week {
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: justify;
    justify-content: space-between;
    padding: 0 24rpx;
}

.week-navbar .week__date {
    font-size: 22rpx;
    color: #767678;
    text-align: center;
}

.week-navbar .week__label {
    display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    flex-direction: row;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: center;
    justify-content: center;
    font-size: 26rpx;
    color: #999;
    box-sizing: border-box;
    width: 56rpx;
    height: 56rpx;
    border-radius: 100%;
    background-color: #333;
}

.week-navbar .week-active .week__date {
    font-size: 22rpx;
    color: #fff;
}

.week-navbar .week-active .week__label {
    font-size: 26rpx;
    color: #fff;
    border: 2rpx solid #fcc800;
    border-radius: 100%;
    background-color: #242424;
}

.week-navbar-camp .course,.week-navbar-personal .course,.week-navbar-all .course {
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: justify;
    justify-content: space-between;
    padding: 0 24rpx;
}

.week-navbar-camp .course::before,.week-navbar-personal .course::before,.week-navbar-all .course::before {
    content: '';
}

.week-navbar-camp .course__label,.week-navbar-personal .course__label,.week-navbar-all .course__label {
    display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    flex-direction: row;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: center;
    justify-content: center;
    font-size: 26rpx;
    color: #999;
    height: 56rpx;
}

.week-navbar-camp .course-active__label,.week-navbar-personal .course-active__label,.week-navbar-all .course-active__label {
    font-size: 26rpx;
    color: #fff;
}

.week-navbar-all {
    padding: 0 7rpx 40rpx;
}

.week-navbar-all .week,.week-navbar-all .course {
    padding: 0 17rpx;
}

.week-navbar .camp-active {
    color: #fcc800;
}