@import "../../../__wuBaseWxss__/0.wxss";

.course-selected-navbar {
    position: relative;
    box-sizing: border-box;
    display: flex;
    -webkit-box-align: center;
    align-items: center;
    width: 100vw;
    height: 100rpx;
    padding: 0 24rpx 16rpx;
    background-color: #242424;
    box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.32);
}

.course-selected-navbar::before {
    content: '';
    position: absolute;
    top: -20rpx;
    left: 0;
    width: 100%;
    height: 20rpx;
    background-color: #242424;
}

.course-selected-navbar .selected-list {
    display: flex;
}

.course-selected-navbar .selected-list .selected-item {
    font-size: 36rpx;
    color: #767678;
    position: relative;
    margin-right: 48rpx;
    font-weight: bold;
}

.course-selected-navbar .selected-list .selected-item:last-child {
    margin-right: 0;
}

.course-selected-navbar .selected-list .selected-item-active {
    color: #f2f2f7;
}

.course-selected-navbar .selected-list .selected-item-red::after {
    content: '';
    position: absolute;
    top: 6rpx;
    right: -6rpx;
    width: 12rpx;
    height: 12rpx;
    border-radius: 100%;
    background-color: #fb6666;
}

.course-selected-navbar .filter {
    display: flex;
    -webkit-box-align: center;
    align-items: center;
    margin-left: auto;
}

.course-selected-navbar .filter .filter-title {
    font-size: 32rpx;
    color: #f2f2f7;
    margin-right: 8rpx;
}

.course-selected-navbar .filter .filter-title-active {
    color: #fcc800;
}

.course-selected-navbar .filter .filter-icon {
    font-size: 45rpx;
    color: #f2f2f7;
    display: none;
}

.course-selected-navbar .filter .filter-icon-default,.course-selected-navbar .filter .filter-icon-active {
    display: block;
}

.course-selected-navbar .filter .filter-icon-active {
    color: #fcc800;
}