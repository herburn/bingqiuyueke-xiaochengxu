@import "../../../__wuBaseWxss__/0.wxss";

.page-navbar {
    display: flex;
    -webkit-box-align: center;
    align-items: center;
    box-sizing: border-box;
    height: 136rpx;
    padding: 48rpx 24rpx;
    background-color: #242424;
}

.page-navbar-sticky {
    box-shadow: 0 4rpx 24rpx rgba(0,0,0,0.32);
}

.page-navbar .picker-container {
    display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    flex-direction: row;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: start;
    justify-content: flex-start;
    flex-shrink: 0;
    height: inherit;
}

.page-navbar .picker-container .picker-value {
    font-size: 36rpx;
    color: #f2f2f7;
    min-width: 158rpx;
    display: flex;
    -webkit-box-align: center;
    align-items: center;
}

.page-navbar .picker-container .picker-value .icon-down {
    margin-left: 16rpx;
}

.page-navbar .picker-container .picker-value.small-font {
    font-size: 32rpx;
}

.page-navbar .nav-item {
    font-size: 36rpx;
    color: #767678;
    margin-left: 48rpx;
    line-height: 36rpx;
    font-weight: bold;
}

.page-navbar .nav-item:first-child {
    margin-left: 0;
}

.page-navbar .nav-item-active {
    color: #f2f2f7;
}

.page-navbar .nav-item.small-font {
    font-size: 32rpx;
}

.page-navbar .share {
    display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    flex-direction: row;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: center;
    justify-content: center;
    font-size: 28rpx;
    color: #f2f2f7;
    height: 39rpx;
    margin-left: auto;
}

.page-navbar .share__icon {
    margin-right: 16rpx;
    font-size: 39rpx;
    color: #fcc800;
}