.picker-view-custom {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 800;
    width: 100%;
    height: 100%;
    font-size: 32rpx;
    background: rgba(0,0,0,0.5);
}

.picker-view-custom .picker-box {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    background-color: #f2f2f7;
    animation: aniPicker .5s forwards;
}

.picker-view-custom .picker-box .picker-tit {
    display: flex;
    height: 89rpx;
    font-size: 32rpx;
    color: #333;
    text-align: center;
    line-height: 89rpx;
    background: #fff;
    border-bottom: 2rpx solid rgba(118,118,120,0.1);
}

.picker-view-custom .picker-box .picker-tit .text {
    width: 60%;
    font-size: 36rpx;
}

.picker-view-custom .picker-box .picker-tit .cancel {
    width: 20%;
    color: #767678;
}

.picker-view-custom .picker-box .picker-tit .confirm {
    width: 20%;
}

.picker-view-custom .picker-box .picker-view {
    z-index: 1;
    font-size: 32rpx;
    text-align: center;
}

.picker-view-custom .picker-box .picker-view .picker-view-column {
    background-color: #f2f2f7;
}

@-webkit-keyframes aniPicker {
    0% {
        height: 0%;
    }

    100% {
        height: 580rpx;
    }
}

@keyframes aniPicker {
    0% {
        height: 0%;
    }

    100% {
        height: 580rpx;
    }
}