.banner {
    position: relative;
    width: 100%;
    height: 100%;
}

.banner .slide-image {
    width: 100%;
}

.banner .user-swiper-indicator {
    display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    flex-direction: row;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: start;
    justify-content: flex-start;
    position: absolute;
    left: 50%;
    z-index: 2;
    height: 12rpx;
    transform: translate3d(-50%,0,0);
}

.banner .user-swiper-indicator .first-item {
    margin-left: 0!important;
}

.banner .user-swiper-indicator .user-idot-item {
    width: 12rpx;
    height: 12rpx;
    margin-left: 16rpx;
    border-radius: 999rpx;
    background: rgba(51,51,51,0.32);
}

.banner .user-swiper-indicator .active {
    width: 54rpx;
    border-radius: 8rpx;
    background: #fcc800;
}

.banner .mask {
    position: absolute;
    top: 0;
    left: 0;
    z-index: 1;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.24);
}