.upgrade-modal-wrap {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 900;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.64);
}

.upgrade-modal-wrap .upgrade-modal {
    position: absolute;
    top: 55%;
    left: 50%;
    z-index: 901;
    box-sizing: border-box;
    width: 702rpx;
    border-radius: 16rpx;
    padding-top: 48rpx;
    background: #f2f2f7;
    transform: translate3d(-50%,-50%,0);
}

.upgrade-modal-wrap .upgrade-modal .title {
    font-size: 48rpx;
    color: #242424;
    height: 67rpx;
    font-weight: 600;
    text-align: center;
    line-height: 67rpx;
}

.upgrade-modal-wrap .upgrade-modal .modal-content {
    padding: 0 24rpx;
}

.upgrade-modal-wrap .upgrade-modal .tip-words {
    font-size: 28rpx;
    color: #767678;
    height: 39rpx;
    margin-top: 16rpx;
    text-align: center;
    line-height: 39rpx;
}

.upgrade-modal-wrap .upgrade-modal .animate-img {
    display: block;
    width: 640rpx;
    height: 640rpx;
    margin: 0 auto 0;
}

.upgrade-modal-wrap .upgrade-modal .btn {
    font-size: 36rpx;
    color: #242424;
    width: 654rpx;
    height: 114rpx;
    margin: 0 auto 24rpx;
    border-radius: 16rpx;
    text-align: center;
    line-height: 114rpx;
    background: #fcc800;
}

.upgrade-modal-wrap .icon-close {
    position: absolute;
    top: 30rpx;
    right: 30rpx;
    z-index: 901;
    width: 25rpx;
    height: 25rpx;
}