.confirm-page {
    min-height: 100vh;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    -webkit-box-pack: center;
    justify-content: center;
    background: #242424;
}

.bg-layer {
    position: absolute;
    top: 0;
    left: 0;
    z-index: 1;
    width: 100%;
    height: 540rpx;
    overflow: hidden;
}

.bg-layer .bg {
    width: 100%;
    height: 540rpx;
    display: block;
}

.bg-layer .mask-1 {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1;
    height: 540rpx;
    background: -webkit-gradient(linear,left top,left bottom,from(rgba(118,118,118,0)),color-stop(rgba(62,62,62,0.3)),to(#242424));
    background: -webkit-linear-gradient(rgba(118,118,118,0),rgba(62,62,62,0.3),#242424);
    background: linear-gradient(rgba(118,118,118,0),rgba(62,62,62,0.3),#242424);
}

.bg-layer .mask-2 {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1;
    height: 540rpx;
    background: -webkit-gradient(linear,left top,left bottom,from(rgba(118,118,118,0)),color-stop(rgba(62,62,62,0.3)),to(#242424));
    background: -webkit-linear-gradient(rgba(118,118,118,0),rgba(62,62,62,0.3),#242424);
    background: linear-gradient(rgba(118,118,118,0),rgba(62,62,62,0.3),#242424);
    z-index: 2;
    background: rgba(36,36,36,0.1);
}

.flex-container {
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    box-sizing: border-box;
    min-height: 100vh;
    padding-top: 213rpx;
    padding-bottom: 178rpx;
}

.confirm-box {
    position: relative;
    z-index: 102;
    -webkit-box-flex: 1;
    flex: 1;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    -webkit-box-pack: justify;
    justify-content: space-between;
    box-sizing: border-box;
    border-radius: 16rpx;
    width: 702rpx;
    height: inherit;
    margin: 0 auto;
    text-align: center;
    background: #333;
}

.card-top {
    position: relative;
}

.card-top::after {
    content: '';
    position: absolute;
    bottom: 2rpx;
    left: 0;
    width: 100%;
    height: 2rpx;
    margin: 0 auto;
    background-image: -webkit-gradient(linear,left top,right top,color-stop(60%,rgba(118,118,120,0.6)),color-stop(0%,transparent));
    background-image: -webkit-linear-gradient(left,rgba(118,118,120,0.6) 60%,transparent 0%);
    background-image: linear-gradient(to right,rgba(118,118,120,0.6) 60%,transparent 0%);
    background-position: bottom;
    background-size: 16rpx 2rpx;
    background-repeat: repeat-x;
}

.container {
    -webkit-box-flex: 1;
    flex: 1;
}