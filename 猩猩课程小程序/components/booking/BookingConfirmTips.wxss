.confirm-tips {
    font-size: 22rpx;
    color: #767678;
    padding: 24rpx;
    text-align: center;
    line-height: 31rpx;
}

.confirm-tips .one-row {
    display: flex;
    flex-wrap: nowrap;
    margin-bottom: 10rpx;
    line-height: 31rpx;
}

.confirm-tips .one-row .tip-title {
    flex-shrink: 0;
    line-height: 1.5;
}

.confirm-tips .one-row .tip-content {
    -webkit-box-flex: 1;
    flex: 1;
    text-align: left;
    line-height: 1.5;
}