@import "../../__wuBaseWxss__/2.wxss";

.booking-number-dialog {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 800;
    background-color: rgba(0,0,0,0.64);
    display: flex;
    -webkit-box-pack: center;
    justify-content: center;
}

.booking-number-dialog .panel {
    position: relative;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    width: 702rpx;
    height: 878rpx;
    margin-top: 220rpx;
    border-radius: 16rpx;
    overflow: hidden;
    background-color: #f2f2f7;
}

.booking-number-dialog .panel .title {
    font-size: 40rpx;
    color: #333;
    margin-top: 24rpx;
    text-align: center;
}

.booking-number-dialog .panel .row {
    margin: 0 24rpx;
}

.booking-number-dialog .panel .trainer,.booking-number-dialog .panel .time,.booking-number-dialog .panel .person {
    position: relative;
}

.booking-number-dialog .panel .trainer::after,.booking-number-dialog .panel .time::after,.booking-number-dialog .panel .person::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 654rpx;
    height: 2rpx;
    background-color: #767678;
    opacity: .1;
}

.booking-number-dialog .panel .time,.booking-number-dialog .panel .person,.booking-number-dialog .panel .number {
    display: flex;
    -webkit-box-pack: justify;
    justify-content: space-between;
    -webkit-box-align: center;
    align-items: center;
    height: 103rpx;
}

.booking-number-dialog .panel .time .label,.booking-number-dialog .panel .person .label,.booking-number-dialog .panel .number .label {
    font-size: 28rpx;
    color: #333;
}

.booking-number-dialog .panel .time .value,.booking-number-dialog .panel .person .value,.booking-number-dialog .panel .number .value {
    font-size: 28rpx;
    color: #767678;
}

.booking-number-dialog .panel .trainer {
    display: flex;
    -webkit-box-align: center;
    align-items: center;
    margin-top: 24rpx;
    height: 154rpx;
}

.booking-number-dialog .panel .trainer .face {
    margin-right: 16rpx;
}

.booking-number-dialog .panel .trainer .content {
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    -webkit-box-pack: center;
    justify-content: center;
}

.booking-number-dialog .panel .trainer .content .label {
    font-size: 32rpx;
    color: #333;
    margin-bottom: 8rpx;
}

.booking-number-dialog .panel .trainer .content .tips {
    font-size: 26rpx;
    color: #767678;
}

.booking-number-dialog .panel .number-img {
    display: flex;
    -webkit-box-pack: center;
    justify-content: center;
}

.booking-number-dialog .panel .number-img .img {
    font-size: 100rpx;
    color: #333;
    display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    flex-direction: row;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: center;
    justify-content: center;
    width: 160rpx;
    height: 160rpx;
    margin-right: 40rpx;
    border-radius: 100%;
    background-color: #fcc800;
}

.booking-number-dialog .panel .number-img .img:last-child {
    margin-right: 0;
}

.booking-number-dialog .panel .btn {
    font-size: 32rpx;
    color: #333;
    display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    flex-direction: row;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: center;
    justify-content: center;
    height: 113rpx;
    margin-top: auto;
    background-color: #fcc800;
}