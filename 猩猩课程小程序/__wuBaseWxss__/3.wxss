@keyframes fadeInBg {
    0% {
        background: rgba(0,0,0,.1);
    }

    100% {
        background: rgba(0,0,0,.48);
    }
}

@keyframes fadeOutBg {
    0% {
        background: rgba(0,0,0,.48);
    }

    100% {
        background: rgba(0,0,0,0);
    }
}

@keyframes fadeInUp {
    0% {
        transform: translate3d(0,100%,0);
    }

    100% {
        transform: translate3d(0,0,0);
    }
}

@keyframes fadeDown {
    0% {
        transform: translate3d(0,0,0);
    }

    100% {
        transform: translate3d(0,100%,0);
    }
}