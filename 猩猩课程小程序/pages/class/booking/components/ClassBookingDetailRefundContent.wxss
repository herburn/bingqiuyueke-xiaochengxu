.refund-content {
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    min-height: 100vh;
    background-color: #242424;
}

.refund-content .booking-detail-body {
    -webkit-box-flex: 1;
    flex: auto;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    -webkit-box-align: center;
    align-items: center;
}

.refund-content .booking-detail-body .body-top .person-num {
    position: relative;
    display: flex;
    margin-top: 32rpx;
}

.refund-content .booking-detail-body .body-top .person-num::before {
    content: '';
    position: absolute;
    top: 0;
    left: -24rpx;
    width: 702rpx;
    height: 2rpx;
    background-color: #767678;
    opacity: .1;
}

.refund-content .booking-detail-body .body-bottom {
    -webkit-box-flex: 1;
    flex: auto;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
}

.refund-content .booking-detail-body .body-bottom .page-btn {
    margin-top: auto;
}