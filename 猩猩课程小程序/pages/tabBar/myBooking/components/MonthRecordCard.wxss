@import "../../../../__wuBaseWxss__/0.wxss";

.month-record-card {
    position: relative;
    box-sizing: border-box;
    width: 702rpx;
    height: 200rpx;
    padding: 16rpx 24rpx;
    border: solid 2rpx rgba(118,118,120,0.5);
    border-radius: 16rpx;
}

.month-record-card .title-month {
    font-size: 32rpx;
    color: #fff;
    position: relative;
    z-index: 3;
    height: 45rpx;
    padding-left: 8rpx;
    line-height: 45rpx;
}

.month-record-card .record-content {
    display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    flex-direction: row;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: justify;
    justify-content: space-between;
    position: relative;
    z-index: 3;
    margin-top: 45rpx;
}

.month-record-card .record-content .value {
    font-size: 48rpx;
    color: #fff;
    height: 39rpx;
    line-height: 39rpx;
}

.month-record-card .record-content .desc {
    font-size: 22rpx;
    color: #c9c9cd;
    height: 31rpx;
    line-height: 31rpx;
}

.month-record-card .record-content .count {
    width: 88rpx;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: start;
    justify-content: flex-start;
}

.month-record-card .record-content .day {
    position: absolute;
    left: 50%;
    bottom: 0;
    width: 88rpx;
    margin-left: -44rpx;
}

.month-record-card .record-content .day,.month-record-card .record-content .duration {
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: center;
    justify-content: center;
}

.month-record-card .record-content .duration {
    width: 145rpx;
}

.month-record-card .bg {
    position: absolute;
    z-index: 1;
    top: 0;
    left: 0;
    width: 698rpx;
    height: 196rpx;
    border-radius: 16rpx;
}