page {
    background: #242424;
}

.banner {
    display: block;
    width: 100%;
    height: 428rpx;
}

.navigator-bar {
    position: fixed;
    z-index: 1100;
    top: 0;
    left: 0;
    right: 0;
}

.store-top-bg {
    width: 100%;
    height: 512rpx;
}

.store-filter {
    position: relative;
    z-index: 1;
    box-sizing: border-box;
    height: 108rpx;
    margin: 0 auto;
    margin-top: -54rpx;
    border-radius: 16rpx;
    text-align: center;
}

.store-filter .store-filer-inner {
    display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    flex-direction: row;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: justify;
    justify-content: space-between;
    width: 702rpx;
    height: 108rpx;
    margin: 0 auto;
    border-radius: 16rpx;
    background: #333;
}

.store-filter .city-filter,.store-filter .theme-filter {
    font-size: 32rpx;
    color: #f2f2f7;
    display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    flex-direction: row;
    -webkit-box-align: center;
    align-items: center;
    -webkit-box-pack: center;
    justify-content: center;
    position: relative;
    -webkit-box-flex: 1;
    flex: 1;
    height: 108rpx;
    line-height: 108rpx;
}

.store-filter .filter-arrow {
    font-size: 45rpx;
    color: #f2f2f7;
    margin-left: 16rpx;
}

.store-filter .sep-line {
    position: absolute;
    top: 16rpx;
    left: 350rpx;
    width: 2rpx;
    height: 76rpx;
    border-radius: 2rpx;
    background: #666;
}

.filter-inner-wrap {
    width: 702rpx;
    height: 108rpx;
    margin: 0 auto;
    border-radius: 16rpx;
    background: #333;
}

.store-filter-strick {
    position: fixed;
    z-index: 3;
    top: 0;
    left: 0;
    margin-top: 0;
    width: 100%;
    border-radius: 0;
    box-shadow: 0 4rpx 24rpx rgba(0,0,0,0.32);
}

.inner-wrapper-strick {
    width: 100%;
    transform-origin: center;
    border-radius: 0;
    transition: .3s width cubic-bezier(.46,1,.23,1.52);
}

.store-lists {
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
    -webkit-box-align: start;
    align-items: flex-start;
    -webkit-box-pack: center;
    justify-content: center;
    padding: 0 24rpx;
}

.store-lists .box-card {
    margin-bottom: 24rpx;
}

.store-lists .box-card:last-child {
    margin-bottom: 0;
}

.copy-right-bottom {
    display: block;
    margin-top: auto;
    padding: 24rpx 0;
}