.newClassEnvelopes-strong-mask {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0,0,0,0.7);
    z-index: 20;
}

.newClassEnvelopes-strong-mask .newClassEnvelopes-wrapper {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    width: 580rpx;
    height: 580rpx;
    background: url("https://static1.keepcdn.com/2019/03/11/16/1552292333270_580x580.png") no-repeat center;
    background-size: 100%;
    border-radius: 8rpx;
    opacity: 1;
}

.newClassEnvelopes-strong-mask .newClassEnvelopes-wrapper .newClassEnvelopes-title {
    margin-top: 44rpx;
    text-align: center;
    font-size: 26rpx;
    color: #fff;
}

.newClassEnvelopes-strong-mask .newClassEnvelopes-wrapper .newClassEnvelopes-title .bold {
    font-weight: bold;
    color: #f1d8a0;
}

.newClassEnvelopes-strong-mask .newClassEnvelopes-wrapper .newClassEnvelopes-title text:first-child {
    position: relative;
}

.newClassEnvelopes-strong-mask .newClassEnvelopes-wrapper .newClassEnvelopes-title text:first-child:before {
    content: '';
    width: 0px;
    height: 0px;
    border-top: 6rpx solid transparent;
    border-bottom: 6rpx solid transparent;
    border-left: 6rpx solid #fff;
    position: absolute;
    top: 12.5rpx;
    left: -22rpx;
}

.newClassEnvelopes-strong-mask .newClassEnvelopes-wrapper .newClassEnvelopes-title text:last-child {
    position: relative;
}

.newClassEnvelopes-strong-mask .newClassEnvelopes-wrapper .newClassEnvelopes-title text:last-child:after {
    content: '';
    width: 0px;
    height: 0px;
    border-top: 6rpx solid transparent;
    border-bottom: 6rpx solid transparent;
    border-right: 6rpx solid #fff;
    position: absolute;
    top: 12.5rpx;
    right: -22rpx;
}

.newClassEnvelopes-strong-mask .newClassEnvelopes-wrapper .newClassEnvelopes-info {
    width: 100rpx;
    height: 67rpx;
    font-weight: bold;
    color: #f1d8a0;
    line-height: 28rpx;
    font-size: 21rpx;
    text-align: center;
    position: absolute;
    top: 308rpx;
    left: 240rpx;
}

.newClassEnvelopes-strong-mask .newClassEnvelopes-wrapper .newClassEnvelopes-btn {
    width: 480rpx;
    height: 100rpx;
    text-align: center;
    font-size: 36rpx;
    color: #a27d2b;
    line-height: 100rpx;
    background: #f1d8a0;
    border-radius: 100px;
    position: absolute;
    bottom: 40rpx;
    left: 50%;
    transform: translateX(-50%);
}

.newClassEnvelopes-strong-mask .close {
    display: block;
    width: 64rpx;
    height: 64rpx;
    background: url("https://static1.keepcdn.com/2018/08/01/11/1533095496576_64x64.png") no-repeat center;
    background-size: 64rpx;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    bottom: 201rpx;
}

.newClassEnvelopes-weak {
    z-index: 2;
    width: 160rpx;
    height: 160rpx;
    position: fixed;
    right: 28rpx;
    bottom: 170rpx;
    background: url("https://static1.keepcdn.com/2019/03/11/18/1552298881045_160x160.png") no-repeat center;
    background-size: 160rpx;
    transition: all 0.5s;
    opacity: 1;
    transform: translateX(0);
}

.newClassEnvelopes-weak:after {
    border: none;
}

.newClassEnvelopes-weak.envelopes-hide {
    opacity: 0.3;
    transform: translateX(85%);
}