.amount-selector {
    margin-top: 24rpx;
    background-color: #fff;
}

.amount-selector .select-amount {
    display: flex;
    align-items: center;
    padding: 0 28rpx;
    height: 120rpx;
    border-bottom: 1rpx solid #ebebeb;
}

.amount-selector .select-amount .title {
    position: relative;
    margin-right: 24rpx;
}

.amount-selector .select-amount .title .text {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
}

.amount-selector .select-amount .title .tips {
    position: absolute;
    left: 0;
    right: 0;
    bottom: -28rpx;
    font-size: 20rpx;
    color: #d9a53d;
    text-align: center;
}

.amount-selector .select-amount .amount {
    position: relative;
    margin-right: 24rpx;
    width: 112rpx;
    height: 56rpx;
    line-height: 56rpx;
    border-radius: 56rpx;
    box-sizing: border-box;
    border: 1rpx solid #ccc;
    text-align: center;
    font-size: 24rpx;
    color: #666;
}

.amount-selector .select-amount .amount.selected {
    background-color: rgba(36,199,137,0.1);
    border: 1rpx solid #24c789;
    color: #24c789;
}

.amount-selector .select-amount .amount.forbid {
    color: #ccc;
}

.amount-selector .select-amount .amount .promotion-tag {
    position: absolute;
    top: 0;
    left: 90rpx;
    padding: 0 10rpx;
    height: 30rpx;
    line-height: 30rpx;
    background-color: #fff1f0;
    border-radius: 4rpx;
    font-size: 20rpx;
    color: #ff5363;
    white-space: nowrap;
}

.amount-selector .select-pay {
    padding: 0 28rpx 28rpx;
}

.amount-selector .select-pay .pay-info {
    display: flex;
    align-items: center;
    padding: 38rpx 0;
}

.amount-selector .select-pay .pay-info .title {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
}

.amount-selector .select-pay .pay-info .tips {
    margin-left: 28rpx;
    padding-left: 32rpx;
    font-size: 22rpx;
    color: #d9a53d;
    background-image: url("data:img/jpg;base64,");
    background-size: 24rpx 24rpx;
    background-position: center left;
    background-repeat: no-repeat;
}

.amount-selector .select-pay .pay-info .package-amount-tips {
    margin-left: 28rpx;
    font-size: 22rpx;
    color: #666;
}

.amount-selector .select-pay .pay-info .package-amount-tips .count {
    font-weight: bold;
    color: #24c789;
}

.amount-selector .select-pay .payment {
    position: relative;
    margin-bottom: 24rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 150rpx;
    border-radius: 8rpx;
    border: 1rpx solid #ccc;
}

.amount-selector .select-pay .payment.selected {
    background-color: #e9faf3;
    border: 1rpx solid #24c789;
    color: #24c789;
}

.amount-selector .select-pay .payment:last-child {
    margin-bottom: 0;
}

.amount-selector .select-pay .payment .payment-info {
    margin-left: 28rpx;
}

.amount-selector .select-pay .payment .payment-info .name-wrap {
    display: flex;
    align-items: center;
}

.amount-selector .select-pay .payment .payment-info .name-wrap .icon {
    display: block;
    margin-right: 16rpx;
    width: 48rpx;
    height: 48rpx;
}

.amount-selector .select-pay .payment .payment-info .name-wrap .name {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
}

.amount-selector .select-pay .payment .payment-info .name-wrap .name.small-size {
    font-size: 30rpx;
}

.amount-selector .select-pay .payment .payment-info .name-wrap .gift-tag {
    margin-left: 16rpx;
    line-height: 30rpx;
    font-size: 22rpx;
    color: #ff5363;
}

.amount-selector .select-pay .payment .payment-info .description {
    margin-top: 8rpx;
    font-size: 24rpx;
    line-height: 34rpx;
    color: #666;
}

.amount-selector .select-pay .payment .single-price {
    margin-right: 50rpx;
}

.amount-selector .select-pay .payment .single-price .unit {
    font-size: 24rpx;
    color: #24c789;
}

.amount-selector .select-pay .payment .single-price .price {
    position: relative;
    top: 4rpx;
    margin-left: 2rpx;
    margin-right: 6rpx;
    font-size: 40rpx;
    font-weight: bold;
    color: #24c789;
}

.amount-selector .select-pay .payment .single-price .text {
    font-size: 24rpx;
    color: #999;
}

.amount-selector .select-pay .payment .recommend {
    position: absolute;
    top: 0;
    right: 0;
    display: block;
    width: 94rpx;
    height: 94rpx;
}

.amount-selector .select-pay .payment .new-coupon-tip {
    position: absolute;
    top: -15rpx;
    right: -1rpx;
    padding: 0 10rpx;
    height: 30rpx;
    line-height: 30rpx;
    background: #ff5363;
    border-radius: 4rpx;
    font-size: 20rpx;
    color: #fff;
}

.amount-selector .select-pay .new-user-promotion {
    display: flex;
    justify-content: space-between;
}

.amount-selector .select-pay .new-user-promotion .left {
    margin-top: 12rpx;
    width: 424rpx;
}

.amount-selector .select-pay .new-user-promotion .left .tag {
    width: 140rpx;
    height: 30rpx;
    line-height: 30rpx;
    text-align: center;
    font-size: 20rpx;
    color: #fff0df;
    font-weight: bold;
    background-image: linear-gradient(-45deg,#4aa5d0 0%,#24c789 100%);
    border-radius: 4rpx;
}

.amount-selector .select-pay .new-user-promotion .left .title {
    font-size: 28rpx;
    color: #333;
    line-height: 40rpx;
    font-weight: bold;
    margin-top: 20rpx;
    margin-bottom: 13rpx;
}

.amount-selector .select-pay .new-user-promotion .left .title .count {
    color: #ff5363;
}

.amount-selector .select-pay .new-user-promotion .left .subtitle {
    font-size: 24rpx;
    color: #999;
    line-height: 24rpx;
    background: url("https://static1.keepcdn.com/2019/08/08/11/1565235498642_24x24.png") no-repeat right 71rpx center;
    background-size: 24rpx;
}

.amount-selector .select-pay .new-user-promotion .right {
    margin-top: 5rpx;
}

.amount-selector .select-pay .new-user-promotion .right .popup {
    background: #24c789;
    border-radius: 21rpx;
    line-height: 42rpx;
    height: 42rpx;
    text-align: center;
    font-size: 22rpx;
    color: #fff;
    margin-right: -12rpx;
}

.amount-selector .select-pay .new-user-promotion .right .popup.select-style {
    width: 112rpx;
    margin-left: 101rpx;
}

.amount-selector .select-pay .new-user-promotion .right .promotion-select {
    height: 40rpx;
    line-height: 40rpx;
    margin-top: 15rpx;
    display: flex;
    align-items: center;
    width: 200rpx;
}

.amount-selector .select-pay .new-user-promotion .right .promotion-select .before-price {
    font-size: 26rpx;
    color: #999;
    text-decoration: line-through;
    margin-right: 10rpx;
    margin-left: 16rpx;
    position: relative;
    top: 4rpx;
}

.amount-selector .select-pay .new-user-promotion .right .promotion-select .after-price {
    font-weight: bold;
    font-size: 32rpx;
    color: #333;
    line-height: 36rpx;
    position: relative;
    top: 4rpx;
}

.amount-selector .select-pay .new-user-promotion .right .promotion-select .select {
    height: 30rpx;
    width: 30rpx;
    margin-left: 16rpx;
    font-size: 24rpx;
    color: #999;
    background: url("https://static1.keepcdn.com/2019/04/02/12/1554178171960_45x45.png") no-repeat center;
    background-size: 30rpx 30rpx;
    position: relative;
    top: 3rpx;
}

.amount-selector .select-pay .new-user-promotion .right .promotion-select .select.select-icon {
    background-image: url("https://static1.keepcdn.com/2019/04/02/10/1554173246370_45x45.png");
}

.amount-selector .select-pay .new-user-promotion .right .promotion-select .select:after {
    position: absolute;
    top: -23rpx;
    left: 50%;
    transform: translateX(-50%);
    content: '';
    width: 14rpx;
    height: 10rpx;
    background: url("https://static1.keepcdn.com/2019/08/08/10/1565232816423_14x10.png");
    background-size: cover;
}

.amount-selector .pay-wrap {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 5;
    background-color: #24c789;
}

.amount-selector .pay-wrap.iphonex {
    padding-bottom: 48rpx;
}

.amount-selector .pay-wrap.disabled {
    background-color: #70e0ae;
}

.amount-selector .pay-wrap.disabled .wx-button {
    background-color: #70e0ae;
}

.amount-selector .pay-wrap .remind {
    box-sizing: border-box;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 68rpx;
    width: 100%;
    box-shadow: 0 -8rpx 10rpx 0 rgba(0,0,0,0.02);
}

.amount-selector .pay-wrap .remind .alert {
    background: url("https://static1.keepcdn.com/2019/05/30/10/1559181668114_24x24.png") no-repeat left center;
    background-size: 24rpx;
    color: #d9a53d;
    padding-left: 40rpx;
}

.amount-selector .pay-wrap .remind .inform {
    color: #24c789;
}

.amount-selector .pay-wrap .remind .remind-text {
    font-size: 24rpx;
    line-height: 24rpx;
}

.amount-selector .pay-wrap .pay {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 116rpx;
    font-size: 36rpx;
    color: #fff;
}

.amount-selector .pay-wrap .pay .origin-cost {
    margin-left: 12rpx;
    opacity: 0.7;
    font-size: 26rpx;
    text-decoration: line-through;
}

.amount-selector .pay-wrap .pay .loading-icon {
    display: block;
    width: 48rpx;
    height: 48rpx;
    margin-right: 16rpx;
    animation: imgRotate 1s infinite linear;
}

.amount-selector .pay-wrap .wx-button {
    padding: 0;
    margin: 0;
    border-radius: 0;
    box-sizing: content-box;
    background-color: #24c789;
}

.amount-selector .pay-wrap .wx-button:after {
    display: none;
}