.enterprise-verify {
    margin: 24rpx 28rpx 0;
    padding: 56rpx 0 36rpx;
    background-color: #fff;
    box-shadow: 0 6rpx 10rpx 0 rgba(0,0,0,0.02);
    border-radius: 8rpx;
}

.enterprise-verify .title {
    text-align: center;
    font-size: 40rpx;
    font-weight: bold;
    color: #333;
}

.enterprise-verify .code {
    margin: 32rpx 64rpx 0;
    height: 100rpx;
    line-height: 100rpx;
    border-radius: 100rpx;
    border: 1rpx solid rgba(51,51,51,0.2);
    text-align: center;
    font-size: 36rpx;
    color: #333;
    caret-color: #24c789;
}

.enterprise-verify .code.incorrect {
    border: 1rpx solid #ff5363;
}

.enterprise-verify .btn {
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 32rpx 64rpx;
    height: 100rpx;
    border-radius: 100rpx;
    background-color: #24c789;
    font-size: 36rpx;
    color: #fff;
}

.enterprise-verify .btn.disabled {
    background-color: #70e0ae;
}

.enterprise-verify .btn .loading-icon {
    display: block;
    width: 48rpx;
    height: 48rpx;
    margin-right: 16rpx;
    animation: imgRotate 1s infinite linear;
}

.enterprise-verify .tip {
    line-height: 38rpx;
    font-size: 26rpx;
    color: #999;
    text-align: center;
}