.show-modal-box {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    top: 0;
    z-index: 20;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: rgba(0,0,0,0.7);
}

.show-modal-box .weak-modal-box {
    width: 576rpx;
    background-color: #fff;
    border-radius: 8rpx;
    overflow: hidden;
}

.show-modal-box .weak-modal-box .title {
    padding: 70rpx 0;
    line-height: 45rpx;
    font-size: 32rpx;
    color: #333;
    text-align: center;
}

.show-modal-box .weak-modal-box .button-wrap {
    display: flex;
    border-top: 1rpx solid #ebebeb;
}

.show-modal-box .weak-modal-box .button-wrap .button {
    flex: 1;
    height: 96rpx;
    line-height: 96rpx;
    box-sizing: border-box;
    text-align: center;
    font-size: 32rpx;
}

.show-modal-box .weak-modal-box .button-wrap .button.continue {
    color: #24c789;
}

.show-modal-box .weak-modal-box .button-wrap .button.cancel {
    border-right: 1rpx solid #ebebeb;
    color: #333;
}

.show-modal-box .strong-modal-box {
    width: 580rpx;
    padding: 0 50rpx;
    box-sizing: border-box;
    background-color: #fff;
    border-radius: 8rpx;
    overflow: hidden;
}

.show-modal-box .strong-modal-box .strong-img {
    width: 480rpx;
    display: block;
    padding-bottom: 4rpx;
    margin-top: -28rpx;
}

.show-modal-box .strong-modal-box .strong-img.adidas-tip {
    width: 100%;
    height: 200rpx;
    margin-top: 0rpx;
    padding-bottom: 0rpx;
}

.show-modal-box .strong-modal-box .title {
    margin-top: 48rpx;
    line-height: 50rpx;
    font-size: 36rpx;
    color: #333;
    text-align: center;
    font-weight: bold;
}

.show-modal-box .strong-modal-box .content-wrap {
    padding: 0 48rpx;
    margin-top: 32rpx;
}

.show-modal-box .strong-modal-box .content-wrap .content-arr {
    margin-top: 40rpx;
}

.show-modal-box .strong-modal-box .content-wrap .content-arr .sub-title {
    font-weight: bold;
    font-size: 28rpx;
    color: #666;
    margin-bottom: 16rpx;
}

.show-modal-box .strong-modal-box .content-wrap .content-arr .sub-content {
    font-size: 28rpx;
    color: #666;
}

.show-modal-box .strong-modal-box .content-wrap .content-arr:first-child {
    margin-top: 0;
}

.show-modal-box .strong-modal-box .content-wrap .adidas-tip {
    display: flex;
}

.show-modal-box .strong-modal-box .content-wrap .adidas-tip text {
    margin-top: -16rpx;
}

.show-modal-box .strong-modal-box .content {
    margin-top: 32rpx;
    line-height: 40rpx;
    font-size: 28rpx;
    color: #666;
    text-align: center;
    display: block;
}

.show-modal-box .strong-modal-box .content.no-title {
    margin-top: 48rpx;
    line-height: 45rpx;
    font-size: 32rpx;
    color: #333;
}

.show-modal-box .strong-modal-box .transfer-token {
    margin-top: 52rpx;
    line-height: 98rpx;
    font-family: Keep;
    font-size: 130rpx;
    color: #333;
    letter-spacing: 40rpx;
    text-indent: 40rpx;
    text-align: center;
}

.show-modal-box .strong-modal-box .transfer-token view {
    transform: translateY(14rpx);
}

.show-modal-box .strong-modal-box .button {
    height: 100rpx;
    line-height: 100rpx;
    background-color: #24c789;
    font-size: 36rpx;
    color: #fff;
    text-align: center;
}

.show-modal-box .strong-modal-box .button.continue {
    margin-top: 48rpx;
    border-radius: 100rpx;
}

.show-modal-box .strong-modal-box .button.cancel {
    padding-bottom: 16rpx;
    background-color: #fff;
    font-size: 28rpx;
    color: #584f60;
}

.show-modal-box .strong-modal-box.no-cancel {
    padding: 0;
}

.show-modal-box .strong-modal-box.no-cancel .title,.show-modal-box .strong-modal-box.no-cancel .content {
    padding: 0 50rpx;
}

.show-modal-box .strong-modal-box.no-cancel .button {
    height: 116rpx;
    line-height: 116rpx;
    margin-top: 48rpx;
}