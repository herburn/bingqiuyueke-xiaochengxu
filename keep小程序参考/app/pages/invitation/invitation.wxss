page {
    background-color: #584f60;
}

.invitation-wrap {
    background-image: url("https://static1.keepcdn.com/2018/05/08/14/1525761295528_750x442.png");
    background-repeat: no-repeat;
    background-size: 100%;
    padding-top: 68rpx;
}

.invitation-wrap.received {
    padding-top: 110rpx;
}

.invitation-wrap.received .logo {
    display: none;
}

.invitation-wrap.received .invitation {
    margin-top: 0;
}

.invitation-wrap.received .slogan-wrap {
    margin-top: 92rpx;
}

.invitation-wrap.received .slogan-wrap .icon {
    margin: 0 auto 85rpx;
}

.invitation-wrap.transfertoken {
    padding-top: 110rpx;
}

.invitation-wrap.transfertoken .logo {
    display: none;
}

.invitation-wrap.transfertoken .invitation {
    margin-top: 0;
}

.invitation-wrap.transfertoken .invitation .schedule-info {
    border-radius: 0 0 8rpx 8rpx;
}

.invitation-wrap.transfertoken .invitation .button {
    display: none;
}

.invitation-wrap.transfertoken .slogan-wrap {
    margin-top: 141rpx;
}

.invitation-wrap.transfertoken .slogan-wrap .icon {
    display: none;
}

.logo {
    display: block;
    margin: 0 auto;
    width: 199rpx;
    height: 40rpx;
}

.invitation {
    margin: 140rpx auto 0;
    width: 566rpx;
    box-shadow: 0 2rpx 20rpx 0 rgba(0,0,0,0.1);
}

.invitation .inviter-info {
    position: relative;
    padding: 76rpx 0 30rpx;
    border-radius: 8rpx 8rpx 0 0;
    background-color: #fff;
    text-align: center;
}

.invitation .inviter-info .avatar {
    position: absolute;
    top: -56rpx;
    left: 50%;
    transform: translateX(-50%);
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    border: 8rpx solid #fff;
    background-size: cover;
}

.invitation .inviter-info .username {
    margin-bottom: 8rpx;
    line-height: 45rpx;
    font-size: 32rpx;
    color: #333;
}

.invitation .inviter-info .des {
    line-height: 38rpx;
    font-size: 28rpx;
    color: #999;
}

.invitation .line {
    display: block;
    background: url("https://static1.keepcdn.com/2018/08/14/16/1534236055910_566x32.png") no-repeat center;
    background-size: cover;
    width: 566rpx;
    height: 32rpx;
    transform: scaleY(1.04);
}

.invitation .schedule-info {
    position: relative;
    padding: 30rpx 0 50rpx;
    background-color: #fff;
    text-align: center;
    color: #333;
}

.invitation .schedule-info .received {
    position: absolute;
    top: -14rpx;
    right: 0;
    transform: translateY(-50%);
    display: block;
    width: 123rpx;
    height: 149rpx;
}

.invitation .schedule-info .schedule-name {
    font-size: 34rpx;
    font-weight: bold;
}

.invitation .schedule-info .gym-name {
    margin-top: 10rpx;
    font-size: 30rpx;
}

.invitation .schedule-info .schedule-time {
    margin-top: 8rpx;
    font-size: 30rpx;
}

.invitation .schedule-info .input-token {
    padding-top: 48rpx;
}

.invitation .schedule-info .input-token .icon {
    margin: 0 auto;
    display: block;
    width: 45rpx;
    height: 18rpx;
}

.invitation .schedule-info .input-token .des {
    margin-top: 48rpx;
    line-height: 40rpx;
    font-size: 28rpx;
    color: #333;
    text-align: center;
}

.invitation .schedule-info .input-token .input-wrap {
    margin-top: 28rpx;
    height: 100rpx;
    display: flex;
    justify-content: center;
}

.invitation .schedule-info .input-token .input-wrap .token {
    margin: 0 10rpx;
    width: 100rpx;
    height: 100rpx;
    box-sizing: border-box;
    border: 2rpx solid #999;
    border-radius: 8rpx;
    text-align: center;
}

.invitation .schedule-info .input-token .input-wrap .token.inputing {
    border: 2rpx solid #24c789;
}

.invitation .schedule-info .input-token .input-wrap .token.error {
    border: 2rpx solid #ff5363;
}

.invitation .schedule-info .input-token .input-wrap .token text {
    position: relative;
    top: 8rpx;
    font-family: 'Keep';
    font-size: 90rpx;
    color: #333;
}

.invitation .schedule-info .input-token .input-wrap .token .cursor {
    margin: 20rpx auto;
    width: 2rpx;
    height: 60rpx;
    background-color: #24c789;
    animation: cursorflashing 1s ease-in-out infinite both;
}

.invitation .schedule-info .input-token .tip {
    margin-top: 28rpx;
    line-height: 33rpx;
    font-size: 24rpx;
    color: #999;
    text-align: center;
}

.invitation .schedule-info .input-token input {
    position: absolute;
    bottom: -36rpx;
    width: 0;
    height: 0;
}

.invitation .button {
    height: 116rpx;
    line-height: 116rpx;
    border-radius: 0 0 8rpx 8rpx;
    font-size: 36rpx;
    text-align: center;
    color: #fff;
    background-image: linear-gradient(225deg,#4aa5d0 0%,#4aa5d0 25%,#24c789 100%);
}

.invitation .button.forbid {
    background-image: none;
    background-color: #ccc;
}

.goto-course {
    display: block;
    margin: 64rpx auto 0;
    width: 566rpx;
    height: 100rpx;
    line-height: 100rpx;
    border-radius: 100rpx;
    background-color: #24c789;
    font-size: 36rpx;
    text-align: center;
    color: #fff;
}

.slogan-wrap {
    margin-top: 104rpx;
}

.slogan-wrap .icon {
    margin: 0 auto 100rpx;
    display: block;
    width: 45rpx;
    height: 18rpx;
}

.slogan-wrap .slogan {
    margin: 0 auto;
    display: block;
    width: 212rpx;
    height: 56rpx;
}

.errmsg {
    color: rgba(255,255,255,0.8);
    text-align: center;
    padding-top: 200rpx;
    font-size: 30rpx;
}