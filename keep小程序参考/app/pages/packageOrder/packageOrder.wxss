.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    overflow: hidden;
}

.container .package-icon {
    margin-top: 390rpx;
    display: block;
    width: 78rpx;
    height: 78rpx;
}

.container .title {
    margin-top: 40rpx;
    line-height: 56rpx;
    font-size: 40rpx;
    color: #333;
    text-align: center;
}

.container .tips {
    margin-top: 28rpx;
    line-height: 48rpx;
    font-size: 30rpx;
    color: #666;
    text-align: center;
}

.container.loading .package-icon {
    margin-top: 290rpx;
    width: 200rpx;
    height: 200rpx;
}

.container.loading .title {
    margin-top: 18rpx;
}