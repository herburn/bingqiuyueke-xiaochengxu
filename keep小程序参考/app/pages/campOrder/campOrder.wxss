page {
    background-color: #fff;
}

.container {
    padding: 28rpx 28rpx 0;
}

.course-info {
    position: relative;
    margin-bottom: 24rpx;
    width: 694rpx;
    height: 250rpx;
    border-radius: 8rpx;
    overflow: hidden;
}

.course-info.multi-coach {
    height: 270rpx;
}

.course-info.multi-coach .gym-coach.multi {
    margin-top: 4rpx;
}

.course-info.multi-coach .gym-coach.multi text {
    margin-right: 0;
}

.course-info.multi-coach .course-time {
    margin-top: 27rpx;
}

.course-info .course-cover {
    display: block;
    width: 100%;
    height: 100%;
}

.course-info .course-cover:after {
    background-image: none;
    background-color: #584f60;
    opacity: 0.7;
}

.course-info .info-wrap {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 28rpx;
    right: 28rpx;
    color: #fff;
}

.course-info .gym-coach {
    margin-top: 28rpx;
    line-height: 37rpx;
    font-size: 26rpx;
    white-space: nowrap;
}

.course-info .gym-coach text {
    margin-right: 32rpx;
}

.course-info .course-time {
    margin-top: 48rpx;
    line-height: 42rpx;
    font-size: 30rpx;
}

.course-info .course-name {
    margin-top: 4rpx;
    line-height: 67rpx;
    font-size: 48rpx;
    font-weight: bold;
}

.course-option {
    box-sizing: border-box;
    background-color: #fff;
    padding: 16rpx 28rpx 40rpx;
}

.course-option.cancel-card {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 302rpx;
    padding: 0 56rpx;
}

.course-option.cancel-card .des {
    margin-top: 28rpx;
    line-height: 44rpx;
}

.course-option .tip {
    line-height: 50rpx;
    text-align: center;
    font-size: 36rpx;
    color: #333;
    font-weight: bold;
}

.course-option .scan-limitation {
    margin-top: 16rpx;
    opacity: 0.7;
    font-size: 30rpx;
    color: #333;
    text-align: center;
    line-height: 50rpx;
}

.course-option .copy-wechat {
    margin: 37rpx auto 0;
    width: 566rpx;
    height: 100rpx;
    line-height: 98rpx;
    font-weight: normal;
}

.course-option .icon-mark {
    display: flex;
    justify-content: center;
    margin-bottom: 16rpx;
}

.course-option .icon-mark image {
    display: block;
    width: 64rpx;
    height: 64rpx;
}

.course-option .btn {
    margin: 42rpx auto 0;
    width: 566rpx;
    height: 100rpx;
    line-height: 100rpx;
    border-radius: 100rpx;
    background-color: #24c789;
    text-align: center;
    font-size: 36rpx;
    color: #fff;
}

.course-option .btn.disabled {
    opacity: 0.5;
}

.course-option .des {
    margin-top: 36rpx;
    line-height: 38rpx;
    font-size: 26rpx;
    color: #666;
}

.course-option .des.text-center {
    text-align: center;
}

.gym-address {
    padding: 50rpx 0;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.gym-address .info {
    flex: 1;
    background: url("https://static1.keepcdn.com/2018/11/08/14/1541657486130_54x54.png") no-repeat center right;
    background-size: 54rpx;
}

.gym-address .info .name {
    display: flex;
    align-items: center;
    line-height: 42rpx;
    font-size: 30rpx;
    color: #333;
    padding-left: 40rpx;
}

.gym-address .info .address {
    margin-top: 12rpx;
    line-height: 37rpx;
    padding-left: 40rpx;
    width: 600rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    font-size: 26rpx;
    color: #999;
}

.gym-address .icon-map {
    display: block;
    width: 72rpx;
    height: 72rpx;
}

.camp-course-wrap .camp-title {
    margin: 40rpx 0rpx;
    font-size: 32rpx;
    color: #333;
}

.camp-course-wrap .camp-course-card {
    height: 214rpx;
    width: 100%;
    background: #fff;
    box-shadow: 0 0 20rpx 0 rgba(0,0,0,0.1);
    border-radius: 8rpx;
    padding-top: 20rpx;
    margin-bottom: 20rpx;
}

.camp-course-wrap .camp-course-card .progress {
    width: 230rpx;
    height: 46rpx;
    display: flex;
    align-items: center;
    background-image: linear-gradient(270deg,rgba(88,79,96,0) 0%,rgba(88,79,96,0.1) 100%);
    padding-left: 28rpx;
}

.camp-course-wrap .camp-course-card .progress .current {
    font-family: Keepfont2019;
    font-size: 62rpx;
    color: #b6b2b9;
    line-height: 46rpx;
}

.camp-course-wrap .camp-course-card .progress .all {
    font-size: 26rpx;
    color: rgba(0,0,0,0.5);
}

.camp-course-wrap .camp-course-card .course-detail-wrap {
    display: flex;
    padding: 30rpx 28rpx 28rpx;
    justify-content: space-between;
    align-items: center;
}

.camp-course-wrap .camp-course-card .course-detail-wrap .course-detail .camp-course-info {
    font-size: 32rpx;
    font-weight: bold;
    color: #000;
    margin-bottom: 12rpx;
}

.camp-course-wrap .camp-course-card .course-detail-wrap .course-detail .camp-course-time {
    font-size: 26rpx;
    color: rgba(0,0,0,0.5);
}

.purchase-note {
    margin-top: 60rpx;
}

.purchase-note .info .title {
    font-size: 32rpx;
    color: #333;
}

.purchase-note .info .des {
    margin-top: 34rpx;
    line-height: 38rpx;
    font-size: 26rpx;
    color: #666;
}

.order-info {
    padding: 60rpx 0rpx;
}

.order-info .title {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.order-info .title .text {
    line-height: 45rpx;
    font-size: 32rpx;
    color: #333;
}

.order-info .order {
    margin-top: 34rpx;
}

.order-info .order .item {
    line-height: 38rpx;
    font-size: 26rpx;
    color: #666;
}

.order-info .order .pay {
    line-height: 48rpx;
    font-size: 32rpx;
    font-weight: bold;
    color: #24c789;
    margin-top: 8rpx;
}

.order-info .refund {
    margin: 20rpx auto 0;
    width: 566rpx;
    height: 100rpx;
    line-height: 100rpx;
    border-radius: 100rpx;
    border: 1rpx solid #24c789;
    text-align: center;
    font-size: 36rpx;
    color: #24c789;
    margin-top: 65rpx;
}

.order-info .contact {
    padding: 0;
    margin: 52rpx auto 0;
    height: 33rpx;
    line-height: 33rpx;
    background-color: #fff;
    font-size: 24rpx;
    color: #666;
}

.order-info .contact:after {
    display: none;
}

.order-info .contact.margin-top {
    margin-top: 65rpx;
}