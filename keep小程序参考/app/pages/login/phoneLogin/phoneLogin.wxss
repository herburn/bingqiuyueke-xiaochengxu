page {
    background-color: #584f60;
    color: #fff;
}

.phone-login {
    padding: 0 92rpx;
    overflow: hidden;
}

.phone-login .title {
    margin-top: 69rpx;
    font-size: 44rpx;
    line-height: 58rpx;
}

.phone-login .input-wrap {
    margin-top: 68rpx;
}

.phone-login .input-wrap .title {
    font-size: 36rpx;
    line-height: 50rpx;
}

.phone-login .input-wrap .input-item {
    display: flex;
    align-items: flex-end;
    margin-top: 26rpx;
    height: 102rpx;
    border-bottom: 2rpx solid rgba(255,255,255,0.2);
}

.phone-login .input-wrap .input-item .phone-number {
    width: 100%;
    height: 102rpx;
    line-height: 102rpx;
    font-size: 60rpx;
}

.phone-login .input-wrap .input-item .captcha {
    flex: 1;
    padding-bottom: 16rpx;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 36rpx;
    opacity: 0.2;
}

.phone-login .input-wrap .input-item .captcha.verified {
    opacity: 1;
    font-size: 60rpx;
}

.phone-login .input-wrap .input-item .captcha-button {
    margin-bottom: 20rpx;
    width: 200rpx;
    height: 82rpx;
    line-height: 82rpx;
    border-radius: 82rpx;
    background-color: rgba(36,199,137,0.5);
    font-size: 24rpx;
    text-align: center;
    color: rgba(255,255,255,0.5);
}

.phone-login .input-wrap .input-item .captcha-button.verified {
    background-color: #24c789;
    color: #fff;
}

.phone-login .voice-captcha {
    margin-top: 46rpx;
    line-height: 36rpx;
    font-size: 30rpx;
    color: rgba(255,255,255,0.4);
}

.phone-login .login-button {
    margin-top: 58rpx;
    height: 100rpx;
    line-height: 100rpx;
    border-radius: 100rpx;
    background-color: rgba(36,199,137,0.5);
    color: rgba(255,255,255,0.5);
    font-size: 36rpx;
    text-align: center;
}

.phone-login .login-button.verified {
    background-color: #24c789;
    color: #fff;
}