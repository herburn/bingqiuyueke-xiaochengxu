page {
    background-image: linear-gradient(-45deg,#4aa5d0 0%,#24c789 100%);
}

.invitation-wrap {
    background-repeat: no-repeat;
    background-size: 100%;
    padding-top: 157rpx;
}

.invitation-wrap.received {
    padding-top: 110rpx;
}

.invitation-wrap.received .logo {
    display: none;
}

.invitation-wrap.received .invitation {
    margin-top: 0;
}

.invitation-wrap.received .slogan-wrap {
    margin-top: 60rpx;
}

.logo {
    display: block;
    margin: 0 auto;
    height: 192rpx;
    width: 428rpx;
}

.invitation {
    z-index: 2;
    margin-top: 86.4rpx;
}

.invitation .inviter-info {
    position: relative;
    border-radius: 8rpx 8rpx 0 0;
    text-align: center;
    color: #fff;
}

.invitation .inviter-info .quotationmark {
    position: absolute;
    margin-top: 177rpx;
    margin-left: -271rpx;
    width: 23rpx;
    height: 21rpx;
}

.invitation .inviter-info .avatar {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    border: 8rpx solid #fff;
    background-size: cover;
    display: block;
    margin: 0 auto;
}

.invitation .inviter-info .username {
    margin: 16rpx auto 29rpx;
    line-height: 40rpx;
    font-size: 28rpx;
    text-align: center;
    display: block;
}

.invitation .inviter-info .content {
    line-height: 40rpx;
    text-align: center;
    display: block;
    margin-bottom: 9rpx;
    font-size: 30rpx;
}

.invitation .inviter-info .content .des {
    font-size: 30rpx;
    text-align: center;
    display: inline-block;
}

.invitation .inviter-info .content .times {
    font-size: 40rpx;
    text-align: center;
    margin: 0 10rpx;
    display: inline-block;
}

.invitation .schedule-info {
    padding-top: 71rpx;
    display: flex;
}

.invitation .schedule-info .schedule-content {
    position: relative;
    flex: 1;
    background: #fff;
    border-radius: 8rpx 0 0 8rpx;
    margin-left: 92rpx;
    width: 346rpx;
    height: 180rpx;
}

.invitation .schedule-info .schedule-content .schedule-name {
    font-size: 36rpx;
    padding: 42rpx 0 16rpx 28rpx;
    color: #666;
    letter-spacing: 0;
    line-height: 40rpx;
}

.invitation .schedule-info .schedule-content .schedule-time {
    padding-left: 28rpx;
    font-size: 28rpx;
    color: #24c789;
    letter-spacing: 0;
    line-height: 30rpx;
}

.invitation .schedule-info .line {
    height: 180rpx;
    width: 18rpx;
    transform: scale(1.05,1.02);
}

.invitation .schedule-info .qrcode-content {
    position: relative;
    display: flex;
    flex-direction: column;
    height: 180rpx;
    width: 152rpx;
    background: #fff;
    font-weight: bold;
}

.invitation .schedule-info .qrcode-content .price {
    color: #ff5363;
    position: absolute;
    margin-top: 55rpx;
    margin-left: 53.4rpx;
    font-size: 60rpx;
    letter-spacing: 0;
    line-height: 71rpx;
}

.invitation .schedule-info .qrcode-content .price-symbol {
    color: #ff5363;
    margin-left: 28.4rpx;
    margin-top: 63rpx;
    position: absolute;
    font-size: 37rpx;
    letter-spacing: 0;
    line-height: 44rpx;
}

.invitation .schedule-info .received {
    position: relative;
    display: flex;
    width: 50rpx;
    height: 180rpx;
    background: #ff5363;
    border-radius: 0 8rpx 8rpx 0;
    margin-right: 92rpx;
}

.invitation .schedule-info .received.has-bound {
    background: #ccc;
}

.invitation .schedule-info .received .content {
    position: absolute;
    font-size: 22rpx;
    color: #fff;
    letter-spacing: 0;
    width: 20rpx;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
}

.invitation .button {
    border: 1rpx solid #fff;
    border-radius: 100rpx;
    margin: 36rpx auto 0;
    height: 98rpx;
    width: 566rpx;
    line-height: 36rpx;
    font-size: 36rpx;
    text-align: center;
    color: #fff;
    display: block;
}

.invitation .button .button-content {
    margin-top: 32rpx;
}