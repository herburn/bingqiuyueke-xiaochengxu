page {
    background-color: #fff;
}

.container {
    padding-bottom: 60rpx;
}

.container.not-scroll {
    overflow: hidden;
}

.back-card {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 240rpx;
    background-image: linear-gradient(135deg,#24c789 0%,#4aa5d0 100%);
}

.user-info {
    padding-top: 158rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.user-info .user-wrap {
    display: flex;
    flex-direction: column;
    align-items: center;
    min-width: 170rpx;
}

.user-info .user-wrap.login {
    padding: 0;
    background-color: transparent;
    line-height: normal;
    overflow: visible;
}

.user-info .user-wrap.login:after {
    display: none;
}

.user-info .user-wrap .avatar-wrap {
    position: relative;
}

.user-info .user-wrap .avatar-wrap .keep-vip-icon {
    position: absolute;
    right: 10rpx;
    bottom: 10rpx;
    margin-left: 0;
}

.user-info .user-wrap .username {
    margin-top: 20rpx;
    font-size: 30rpx;
    color: #000;
    font-weight: bold;
    text-align: center;
}

.user-info .month-demon-wrap {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
}

.user-info .month-demon-wrap .demon-item {
    display: flex;
    align-items: center;
    height: 48rpx;
    margin: 20rpx 21rpx 0;
}

.user-info .message-tip {
    margin: 40rpx 0;
    width: 300rpx;
    color: rgba(0,0,0,0.7);
}

.user-info .message-tip .keep-right-more-arrow-new {
    background-position: center right 30rpx;
}

.schedule-package {
    display: flex;
    margin: 40rpx 30rpx 0;
    height: 250rpx;
}

.schedule-package .package-info {
    flex: 1;
    position: relative;
}

.schedule-package .package-info.db11 .status {
    padding-right: 120rpx;
    background: url("https://static1.keepcdn.com/2019/10/25/14/1571985642058_110x30.png") no-repeat center right;
    background-size: 110rpx 30rpx;
}

.schedule-package .package-info .status {
    position: absolute;
    left: 30rpx;
    top: 36rpx;
    font-size: 30rpx;
    color: #000;
    font-weight: bold;
}

.schedule-package .package-info .status.nothing {
    font-size: 36rpx;
    top: 28rpx;
}

.schedule-package .package-info .status.available {
    top: 32rpx;
}

.schedule-package .package-info .status.available .count {
    position: relative;
    top: 4rpx;
    margin-right: 20rpx;
    font-family: 'Keepfont2019';
    font-size: 40rpx;
}

.schedule-package .package-info .tips {
    position: absolute;
    left: 30rpx;
    top: 88rpx;
    font-size: 24rpx;
    color: rgba(0,0,0,0.4);
}

.schedule-package .package-info .tips .number {
    margin: 0 10rpx;
    font-weight: bold;
    color: #24c789;
}

.schedule-package .package-info .button {
    position: absolute;
    left: 30rpx;
    bottom: 30rpx;
}

.schedule-package .pic {
    display: block;
    margin-right: 30rpx;
    margin-top: 50rpx;
    width: 150rpx;
    height: 150rpx;
}

.tab {
    margin: 0 30rpx;
}

.tab .sub-tab {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 106rpx!important;
    padding-left: 10rpx;
    background-color: #fff!important;
    border: none!important;
}

.tab .sub-tab .title {
    font-size: 32rpx;
    color: #000;
    font-weight: normal;
}

.account-tab {
    position: relative;
    display: flex;
    margin: 40rpx auto 0;
    width: 510rpx;
    height: 78rpx;
    border-radius: 78rpx;
    box-sizing: border-box;
    border: 1rpx solid rgba(0,0,0,0.1);
}

.account-tab:after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 1rpx;
    height: 35rpx;
    transform: translateY(-50%);
    background-color: rgba(0,0,0,0.1);
}

.account-tab .sub-tab {
    flex: 1;
    height: 78rpx;
    line-height: 78rpx;
    text-align: center;
    font-size: 30rpx;
    color: rgba(0,0,0,0.7);
}

.wristband {
    position: relative;
    padding: 20rpx 28rpx;
    margin-top: 20rpx;
}

.wristband image {
    display: block;
    width: 694rpx;
    height: 140rpx;
}

.wristband view {
    font-size: 26rpx;
    color: #619ca4;
    text-align: center;
    line-height: 36rpx;
    position: absolute;
    bottom: 42rpx;
    left: 0;
    right: 0;
}