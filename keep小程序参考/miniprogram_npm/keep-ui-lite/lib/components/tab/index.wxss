@import "../../../../../__wuBaseWxss__/1.wxss";

.keep-tabs-tab {
    display: flex;
    width: 100%;
    height: 100%;
    justify-content: center;
    align-items: center;
    text-align: center;
    position: relative;
}

.keep-tabs-tab--bar {
    position: absolute;
    bottom: 0;
    left: 50%;
    z-index: 1;
    transform: translateX(-50%);
    display: block;
    width: 26rpx;
    height: 6rpx;
    background-color: #24c789;
}

.keep-tabs-tab--title {
    font-size: 30rpx;
    text-align: center;
    color: rgba(0,0,0,.4);
}

.keep-tabs-tab--title--current {
    color: #000;
    font-weight: 700;
}