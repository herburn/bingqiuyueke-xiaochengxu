@import "../../../../../__wuBaseWxss__/1.wxss";

.keep-tabs {
    display: flex;
    align-items: center;
    padding-top: 4rpx;
    width: 100%;
    height: 98rpx;
    box-sizing: border-box;
    background: #fff;
    position: relative;
}

.keep-tabs:after {
    position: absolute;
    bottom: 0rpx;
    left: 30rpx;
    right: 30rpx;
    content: "";
    height: 2rpx;
    transform-origin: 0 100%;
    transform: scaleY(.5);
    background-color: #efefef;
}

.keep-tabs--scroll {
    display: block;
    white-space: nowrap;
}